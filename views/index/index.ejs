
	<% for (var i=0; i<model.tweetsByCategory.length; i++) { %>
		<% if (model.tweetsByCategory[i].tweets.length > 0) { %>
			<div class="category-listing">
				<a href="/<%= model.tweetsByCategory[i].category %>" class="category-name"><%= model.tweetsByCategory[i].category %></a>
			</div>
			<div class="twitterstream-mini home">
				<ul class="tweet-list">
					<% if (model.tweetsByCategory[i].tweets) { %>
						<% for (var j=0; j<model.tweetsByCategory[i].tweets.length; j++) { %>
							<li class="tweet-stream-mini">
								<div class="profile-image">
									<img src='<%= model.tweetsByCategory[i].tweets[j].profile_image_url %>'/>
								</div>
								<div class="tweet-info-mini">
									<div class="user-mini">
										<%= model.tweetsByCategory[i].tweets[j].full_name %>
									</div>
									<div class="text-mini">
										<%= model.tweetsByCategory[i].tweets[j].text %>
									</div>
									<div class="date-mini">
										<%= model.tweetsByCategory[i].tweets[j].created_on %>
									</div>
								</div>
							</li>
						<% } %>
					<% } %>
				</ul>
			</div>
		<% } %>
	<% } %>
